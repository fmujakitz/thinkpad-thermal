{
  "name": "thinkpad-thermal",
  "version": "1.0.0",
  "private": true,
  "description": "Display ThinkPad thermal and fan status using /proc/acpi/ibm/thermal and /proc/acpi/ibm/fan.",
  "license": "MIT",
  "author": "Faris Mujakic <faris.mujakic@gmail.com>",
  "type": "module",
  "scripts": {
    "build": "yarn compile && cd ./dist && zip -qr 'thinkpadthermal@moonlight.drive.vk.gmail.com.zip' . && cd ..",
    "compile": "tsc --build tsconfig.json && cp -a resources/. dist",
    "dev": "yarn compile && cp -a dist/. ~/.local/share/gnome-shell/extensions/thinkpadthermal@moonlight.drive.vk.gmail.com",
    "types:generate": "ts-for-gir generate"
  },
  "devDependencies": {
    "@ts-for-gir/cli": "^3.2.2",
    "typescript": "^5.2.2"
  },
  "url": "https://github.com/fmujakitz/thinkpad-thermal"
}
